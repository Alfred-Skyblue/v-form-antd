{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "baseUrl": ".",
    "preserveValueImports": false,
    "isolatedModules": true,
    "types":["@types/node"],
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "paths": {
      "@/*": ["./packages/*"],
      "@common/*": ["./packages/common/*"],
      "@design/*": ["./packages/v-form-design/*"],
      "@create/*": ["./packages/v-form-create/*"],
      "@styles/*": ["./styles/*"],
    }
  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "packages/**/*.ts", "packages/**/*.vue"],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
